<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>
<% if (errors && errors.length) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<form class="forms" action="/inv/delete-confirm" method="post">
    <span>Are you sure you want to delete this vehicle? The delete is permanent.</span>

  <br />
  <label for="inv_make">Make:</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" readonly />
    
  <br />
  <label for="inv_model">Model:</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" readonly />

  <br />
  <label for="inv_price">Price:</label>
  <input type="number" id="inv_price" name="inv_price" value="<%= locals.inv_price %>" readonly />

  <br />
  <label for="inv_year">Year:</label>
  <input type="number" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" pattern="^\d{4}$" readonly />

  <br />
  <button type="submit">Delete Vehicle</button>

  <input type="hidden" name="inv_id"
  <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
  <% } %>>
</form>
