<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<%- messages() %>
<% if (errors && errors.length) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<form id="updateAccForm" class="forms" action="/account/update-password" method="post">
    <br>
    <label for="password-update">New Password</label>
    <input type="password" name="account_password" required pattern="(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}">
    <span class="psswd-req">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    <br>

    <button type="submit" id="register-button">Update Password</button>
    <input type="hidden" name="account_id" value="<%= locals.account_id %>">
</form>
