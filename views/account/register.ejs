<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect(404)
} %>
<%- messages() %>
<form id="register-form" action="/account/register" method="post">
    <label for="first_name" >First Name</label>
    <input type="text" name="account_firstname" required>
    <br>
    <label for="last_name">Last Name</label>
    <input type="text" name="account_lastname" required>
    <br>
    <label for="email">Email address</label>
    <input type="email" name="account_email" required>
    <br>
    <span class="psswd-req">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    <label for="password">Password</label>
    <input type="password" pattern="(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}" name="account_password" required>
    <br>
    <button type="submit" id="register-button">Register</button>
</form>