<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect(404)
} %>
<%- messages() %>
<form id="login-form" action="/account/login" method="post">
    <label for="email" id="email-label">Email:</label>
    <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>">
    <br>
    <span class="psswd-req">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <label for="password" id="password-label">Password:</label>
    <input type="password" id="password" name="account_password" pattern="(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}" required>
    <br>
    <button type="submit" id="login-button">Login</button>
    <p>No account? <a href="/account/register">Sign-up</a></p>
</form>
