<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect(404)
} %>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
     </ul>
<% } %>
<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<h3>Update Account Information</h3>
<p><a href="/account/update-account/<%= locals.accountData.account_id %>">Click here to Update Account Information</a></p>
<h3>Change Password</h3>
<p><a href="/account/update-password/<%= locals.accountData.account_id %>">Click here to Change Password</a></p>
<% if (accountData.account_type === 'Admin' || accountData.account_type === 'Employee') { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv/management">Click here for Inventory Management</a></p>
  <h3>Customer Messages</h3>
  <p><a href="/message/management">Click here to read Customer messages</a></p>
<% } %>

